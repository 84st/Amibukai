<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <p>
          作目：
          </p>
          <input name="item" value="<%= @post.item %>">
          <p>
          作業内容：
          </p>
          <input name="work" value="<%= @post.work %>">
          詳細：
          <textarea name="report"><%= @post.report %></textarea>
          画像：
          <input name="media" type="file">
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>